issn = {09242716},
journal = {ISPRS Journal of Photogrammetry and Remote Sensing},
keywords = {Lidar,Linear unmixing,Principal components,Random forest,Structure},
pages = {106--119},
publisher = {International Society for Photogrammetry and Remote Sensing, Inc. (ISPRS)},
title = {{Predicting temperate forest stand types using only structural profiles from discrete return airborne lidar}},

doi = {10.1016/j.isprsjprs.2011.09.003},
file = {:C$\backslash$:/Users/goodb/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Dalponte et al. - 2011 - The role of ground reference data collection in the prediction of stem volume with LiDAR data in mountain areas.pdf:pdf},
